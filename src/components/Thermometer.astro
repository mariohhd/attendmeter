---
interface Props {
  percentage: number
  label?: string
  height?: number
  color?: string
  target?: number
}

const { 
  percentage = 0, 
  label = "Attendance", 
  height = 200, 
  color,
  target 
} = Astro.props

// Determine color based on percentage if not provided
const getThermometerColor = (pct: number): string => {
  if (color) return color
  if (pct >= 90) return '#10b981' // green
  if (pct >= 80) return '#f59e0b' // amber
  if (pct >= 70) return '#f97316' // orange
  return '#ef4444' // red
}

const fillColor = getThermometerColor(percentage)
const fillHeight = Math.max(0, Math.min(100, percentage))
---

<div class="thermometer-container">
  <div class="thermometer-label">
    <span class="label-text">{label}</span>
    <span class="percentage-text">{percentage}%</span>
  </div>
  
  <div class="thermometer" style={`height: ${height}px`}>
    <!-- Thermometer bulb -->
    <div class="thermometer-bulb">
      <div class="bulb-fill" style={`background-color: ${fillColor}`}></div>
    </div>
    
    <!-- Thermometer tube -->
    <div class="thermometer-tube">
      <!-- Background tube -->
      <div class="tube-background"></div>
      
      <!-- Fill indicator -->
      <div 
        class="tube-fill" 
        style={`height: ${fillHeight}%; background-color: ${fillColor}`}
      ></div>
      
      <!-- Target line if specified -->
      {target && (
        <div 
          class="target-line" 
          style={`bottom: ${target}%`}
          title={`Target: ${target}%`}
        ></div>
      )}
      
      <!-- Scale markings -->
      <div class="scale-markings">
        {[0, 25, 50, 75, 100].map(mark => (
          <div 
            class="scale-mark" 
            style={`bottom: ${mark}%`}
          >
            <span class="scale-label">{mark}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  .thermometer-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
  }

  .thermometer-label {
    text-align: center;
  }

  .label-text {
    display: block;
    font-size: 1.1rem;
    font-weight: 600;
    color: #374151;
    margin-bottom: 0.25rem;
  }

  .percentage-text {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    color: #1f2937;
  }

  .thermometer {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 60px;
  }

  .thermometer-bulb {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: #f3f4f6;
    border: 3px solid #d1d5db;
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .bulb-fill {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    transition: background-color 0.3s ease;
  }

  .thermometer-tube {
    width: 20px;
    height: calc(100% - 20px);
    position: relative;
    margin-top: -20px;
    z-index: 1;
  }

  .tube-background {
    width: 100%;
    height: 100%;
    background-color: #f3f4f6;
    border: 2px solid #d1d5db;
    border-radius: 10px 10px 0 0;
    border-bottom: none;
  }

  .tube-fill {
    position: absolute;
    bottom: 0;
    left: 2px;
    right: 2px;
    border-radius: 0 0 6px 6px;
    transition: height 0.6s ease-in-out, background-color 0.3s ease;
    min-height: 2px;
  }

  .target-line {
    position: absolute;
    left: -5px;
    right: -5px;
    height: 2px;
    background-color: #6366f1;
    z-index: 3;
  }

  .target-line::before {
    content: '';
    position: absolute;
    left: -3px;
    top: -1px;
    width: 0;
    height: 0;
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
    border-top: 4px solid #6366f1;
  }

  .target-line::after {
    content: '';
    position: absolute;
    right: -3px;
    top: -1px;
    width: 0;
    height: 0;
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
    border-top: 4px solid #6366f1;
  }

  .scale-markings {
    position: absolute;
    left: 100%;
    top: 0;
    height: 100%;
    width: 30px;
    pointer-events: none;
  }

  .scale-mark {
    position: absolute;
    left: 5px;
    transform: translateY(50%);
  }

  .scale-mark::before {
    content: '';
    position: absolute;
    left: -7px;
    top: 50%;
    transform: translateY(-50%);
    width: 8px;
    height: 1px;
    background-color: #9ca3af;
  }

  .scale-label {
    font-size: 0.75rem;
    color: #6b7280;
    margin-left: 2px;
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .thermometer-container {
      padding: 0.5rem;
    }
    
    .percentage-text {
      font-size: 1.5rem;
    }
    
    .scale-label {
      font-size: 0.625rem;
    }
  }

  /* Animation for when percentage changes */
  @keyframes fillUp {
    from {
      height: 0%;
    }
    to {
      height: var(--fill-height);
    }
  }

  .tube-fill {
    animation: fillUp 0.6s ease-in-out;
  }
</style>